    <div class="span7">
        <button id="generate" 
                class="btn btn-primary btn-large" 
                data-url="@Url.Action("Index")"
                data-toggle="button" 
                data-loading-text="generating Knockout VM..."
                >
            Generate
        </button>
        
        <img id="loading" style="display: none;" src="@Url.Content("~/Content/images/ajax-loader.gif")" alt="Generating Knockout JS View Model">
        <span id="no-csharp" class="help-inline" style="display: none;">
            The dark side clouds
            everything. Impossible to see the future is - just add some code and try again
        </span>
    </div>
